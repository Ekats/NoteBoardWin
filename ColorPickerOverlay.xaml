<!-- ColorPickerOverlay.xaml -->
<Window x:Class="NoteBoard.ColorPickerOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#00FFFFFF"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">

    <Grid>
        <!-- Slightly transparent to indicate active eyedropper -->
        <Grid.Background>
            <SolidColorBrush Color="#01000000" />
        </Grid.Background>

        <!-- Popup that follows the cursor -->
        <Popup x:Name="PreviewPopup"
               Placement="Relative"
               StaysOpen="True"
               AllowsTransparency="True">
            <Border Background="#CCFFFFFF"
                    CornerRadius="4"
                    Padding="4"
                    BorderBrush="Black"
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <Rectangle x:Name="PreviewRect"
                               Width="16" Height="16"
                               Margin="0,0,5,0"/>
                    <TextBlock x:Name="PreviewText"
                               Foreground="Black"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
